{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "bundle exec jekyll build",
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "options": {
          "cwd": "${workspaceFolder}/src"
        },
        "problemMatcher": "$msCompile"
      },
      {
        "label": "serve",
        "command": "bundle exec jekyll serve --watch 0.0.0.0:4000",
        "type": "shell",
        "isBackground": true,
        "options": {
          "cwd": "${workspaceFolder}/src"
        },
        "problemMatcher": [
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
                }
              ],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".*Server address.*$",
                "endsPattern": ".",
              }
            }
          ]
      },
      {
        "label": "stop",
        "type": "shell",
        "command": "pkill -f jekyll"
      },
    ]
  }
  